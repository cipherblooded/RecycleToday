<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_request">

    <fragment
        android:id="@+id/navigation_request"
        android:name="com.appintuitions.recycletoday.ui.fragments.RequestsFragment"
        android:label="@string/title_request"
        tools:layout="@layout/fragment_requests" />

    <fragment
        android:id="@+id/navigation_leaderboard"
        android:name="com.appintuitions.recycletoday.ui.fragments.LeaderboardFragment"
        android:label="@string/title_leaderboard"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/navigation_reward"
        android:name="com.appintuitions.recycletoday.ui.fragments.RewardsFragment"
        android:label="@string/title_reward"
        tools:layout="@layout/fragment_rewards" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.appintuitions.recycletoday.ui.fragments.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_rewards" />
</navigation>